{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "removeComments": false,
    "strict": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "listEmittedFiles": true,
    "importsNotUsedAsValues": "remove",
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": ["src"]
}
